
<% if flash[:error] %>
  <% flash[:error].each do |e| %>
  <%= e %>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= collection_select :post, :recipe_id, Recipe.all, :id, :title %>
  <%= f.submit "Submit Recipe" %>
<% end %>
